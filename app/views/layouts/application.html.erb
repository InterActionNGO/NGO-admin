<!DOCTYPE html>
<html>
<head>
  <title>Iom</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag 'jquery.min', 'jquery.ui.core', 'jquery.ui.widget', 'jquery.ui.position', 'jquery.ui.autocomplete', 'rails', 'application' %>
  <%= csrf_meta_tag %>
</head>
<body>

  <div id="header">
    <% if logged_in? %>
      <%= link_to('logout', logout_path) %>
    <% end %>
  </div>

  <% if logged_in? %>
  <div id="menu">
    <ul class="main_menu">
      <li><%= link_to('Dashboard', admin_admin_path) %></li>
      <li><%= link_to('Manage Organizations', admin_organizations_path) %></li>
      <li><%= link_to('Manage Donors', admin_donors_path) %></li>
      <li><%= link_to('Manage Projects', admin_projects_path) %></li>
      <li><%= link_to('Manage Sites', admin_sites_path) %></li>
    </ul>
  </div>
  <% end %>

  <%= yield %>

</body>
</html>
