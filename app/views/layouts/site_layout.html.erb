<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= javascript_include_tag 'http://geocommons.com/javascripts/f1.api.js', '/javascripts/sites/map.js' %>
  <%= javascript_include_tag '/javascripts/plugins/fonts/cufon_yui.js','/javascripts/plugins/fonts/PT_Sans.js','/javascripts/plugins/fonts/Geneva.js','/javascripts/plugins/fonts/Aller.js' %>
  <%= javascript_include_tag 'jquery.min', 'jquery.ui.core', 'jquery.ui.widget', 'jquery.ui.position', 'jquery.ui.autocomplete', 'rails', 'application' %>

  <%= stylesheet_link_tag '/stylesheets/sites/layout.css' %>
  <%= stylesheet_link_tag @site.theme.css_file %>

  <!-- TO ENABLE TYPEKIT -->
  <!-- <script type="text/javascript" src="http://use.typekit.com/loh6bqm.js"></script>
  <script type="text/javascript">try{Typekit.load();}catch(e){}</script> -->
</head>
<body  onload="initialize()">
  <div id="outer_header">
    <div id="inner_header">
      <div id="header">
        <div class="left">
          <h1 class="geneva"><%= link_to(@site.name,'/') %></h1>
          <ul class="menu">
            <% if @site.cluster %>
              <li><a href="<%= cluster_path(@site.cluster) %>" class="geneva"><%= @site.word_for_clusters.upcase.singularize %></a></li>
            <% elsif @site.sector %>
              <li><a href="<%= sector_path(@site.sector) %>" class="geneva"><%= @site.word_for_sectors.upcase.singularize %></a></li>
            <% else %>
              <% if @site.navigate_by_cluster? %>
              <li>
                <a href="#" class="geneva"><%= @site.word_for_clusters.upcase %><span class="with_suboptions"></span></a>
                <ul>
                  <% @site.clusters.each do |cluster| %>
                  <li><a href="<%= cluster_path(cluster) %>" class="geneva"><%= cluster.name %></a></li>
                  <% end %>
                </ul>
              </li>
              <% elsif @site.navigate_by_sector? %>
              <li>
                <a href="#" class="geneva"><%= @site.word_for_sectors.upcase %><span class="with_suboptions"></span></a>
                <ul>
                  <% @site.sectors.each do |sector| %>
                  <li><a href="<%= sector_path(sector) %>" class="geneva"><%= sector.name %></a></li>
                  <% end %>
                </ul>
              </li>
              <% end %>
            <% end %>
            <li><a href="#" class="geneva">REGIONS<span class="with_suboptions"></span></a></li>
            <li><a href="#" class="geneva">ORGANIZATIONS<span class="with_suboptions"></span></a></li>
            <li><a href="<%= page_path(Page.analysis(@site)) %>" class="geneva">ANALYSIS</a></li>
            <li><a href="<%= page_path(Page.about(@site)) %>" class="geneva">ABOUT</a></li>
          </ul>
        </div>
        <!-- div left menu -->

        <div class="right">
          <%= form_tag(search_path, :method => :get, :class => 'search') do %>
            <span class="input_search">
              <%= text_field_tag :q, params[:q] %>
              <%= submit_tag '' %>
            </span>
          <% end %>
        </div>
        <!-- div right menu -->
      </div>
    </div>
    <!-- inner header -->
  </div>
  <!-- div outer_header -->

  <div id="outer_layout">
    <div id="map"></div>

    <div id="layout">

      <%= yield %>

      <div id="footer">
        <div class="left">
          <a class="logo"></a>
        </div>
        <div class="right">
          <p class="copy_info pt_sans_bold"><%= @site.name %></p>
          <p class="all_rights pt_sans">A project by Interaction 2010. All rigths reserved.</p>
          <div class="links">
            <a class="pt_sans" href="<%= page_path(Page.contact(@site)) %>">contact us</a><p>/</p><a class="pt_sans" href="<%= page_path(Page.about(@site)) %>">About the project</a>
          </div>
        </div>
      </div>
    </div>
    <!-- layout -->
  </div>
</body>
</html>