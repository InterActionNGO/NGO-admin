<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= javascript_include_tag 'jquery.min', 'jquery.ui.core', 'jquery.ui.widget', 'jquery.ui.position', 'sites/application.js' %>
  
  <%= stylesheet_link_tag '/stylesheets/sites/layout.css' %>
  <%= stylesheet_link_tag @site.theme.css_file %>
</head>
<body>
  <div id="header">
    <div class="inner_header">
      <div class="left">
        <h1><%= link_to(@site.name,'/') %></h1>
        <ul class="menu">
            <% if @site.cluster %>
              <li><a href="<%= cluster_path(@site.cluster) %>" class="geneva"><%= @site.word_for_clusters.upcase.singularize %></a></li>
            <% elsif @site.sector %>
              <li><a href="<%= sector_path(@site.sector) %>" class="geneva"><%= @site.word_for_sectors.upcase.singularize %></a></li>
            <% else %>
              <% if @site.navigate_by_cluster? %>
              <li id="cluster_option">
                <a href="#" class="geneva"><%= @site.word_for_clusters.upcase %><span class="with_suboptions"></span></a>
                <ul class="suboptions">
                  <% @site.clusters.each do |cluster| %>
                  <li><a href="<%= cluster_path(cluster) %>" class="geneva <% if (cluster.name.include? 'Food Security') %><%= 'food' %><%elsif (cluster.name.include? 'Protection') %><%= 'protection' %><%end%>"><%= cluster.name %></a></li>
                  
                  
                  <% end %>
                </ul>
              </li>
              <% elsif @site.navigate_by_sector? %>
              <li id="sector_option">
                <a href="#" class="geneva"><%= @site.word_for_sectors.upcase %><span class="with_suboptions"></span></a>
                <ul class="suboptions">
                  <% @site.sectors.each do |sector| %>
                  <li><a href="<%= sector_path(sector) %>" class="geneva"><%= sector.name %></a></li>
                  <% end %>
                </ul>
              </li>
              <% end %>
            <% end %>
            <li>
              <a href="#" class="geneva">REGIONS<span class="with_suboptions"></span></a>
            </li>
            <li>
              <a href="#" class="geneva">ORGANIZATIONS<span class="with_suboptions"></span></a>
              <ul class="suboptions">
                <% @site.organizations.each do |organization| %>
                <li><a href="<%= organization_path(organization) %>" class="geneva"><%= organization.name %></a></li>
                <% end %>
              </ul>
              
            </li>
            <li><a href="<%= page_path(Page.analysis(@site)) %>" class="geneva">ANALYSIS</a></li>
            <li><a href="<%= page_path(Page.about(@site)) %>" class="geneva">ABOUT</a></li>
        </ul>
      </div>

      <div class="right">
        <%= form_tag(search_path, :method => :get, :class => 'search') do %>
          <span class="input_search">
            <%= text_field_tag :q, params[:q] %>
            <%= submit_tag '' %>
          </span>
        <% end %>
      </div>
    </div>
  </div>

  <div id="outer_layout">
    
    <%= yield %> <!-- Main layout has to content <div id="layout"> -->
      
    <!-- FOOTERS -->
    <% if controller_name == 'pages' || controller_name == 'search' || controller_name == 'donors' %>
      <div id="footer_pages">
        <div class="left">
          <div class="project">
            <h1><%= @site.name %></h1>
            <p class="all_rights">A project by Interaction 2010. All rights reserved.</p>
          </div>
          <div class="links">
            <ul>
              <li><a href="<%= page_path(Page.contact(@site)) %>">contact us</a></li>
              <li>/</li>
              <li><a href="<%= page_path(Page.about(@site)) %>">About the project</a></li>
            </ul>
          </div>
        </div>
        <div class="right">
          <a class="logo"></a>
        </div>
      </div>
    <% else %>
      <div id="footer">
        <div class="left">
          <a class="logo"></a>
        </div>
        <div class="right">
          <div class="project">
            <h1><%= @site.name %></h1>
            <p class="all_rights">A project by Interaction 2010. All rights reserved.</p>
          </div>
          <div class="links">
            <ul>
              <li><a href="<%= page_path(Page.contact(@site)) %>">contact us</a></li>
              <li>/</li>
              <li><a href="<%= page_path(Page.about(@site)) %>">About the project</a></li>
            </ul>
          </div>
        </div>
      </div>
    <% end %>
    </div>
  </div>
  <%=yield :js %>
</body>
</html>