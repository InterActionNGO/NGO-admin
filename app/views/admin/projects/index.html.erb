<div class="main_layout">
  <div class="block">
    <div class="two_projects">
    <span class="top"></span>
    <div class="content">
        <form>
          <label>SEARCH BY TEXT</label>
          <input type="text" value="Search projects by name, place,..." onclick="this.value=''" />
          <input type="submit" value="" />

			<ul class="combos">
				<li>
					<label>STATUS</label>
					<span id="status_combo_search" class="combo">All status 
						<!-- INPUT HIDDEN -->
			          <input id="status_input" type="hidden" value="active" />
						<ul class="elements">
							<li class="first"></li>
							<li>
								<a id="active" class="status">Active</a>
							</li>
							<li>
								<a id="closed" class="status">Closed</a>
							</li>
							<li class="last"></li>
						</ul>
					</span>
				</li>
				<li>
					<label>COUNTRY</label>
					<span id="country_combo_search" class="combo">All
							<!-- INPUT HIDDEN -->
				          <input id="country_input" type="hidden" value="" />
							<ul class="elements">
								<li class="first"></li>
								   <% Country.all.each do |country| %>
									<li>
										<a id="<%= country.id%>"><%= country.name %></a>
									</li>		
								   <% end %>
								<li class="last"></li>
							</ul>
					</span>
				</li>
				<li>
					<label>CLUSTER</label>
					<span id="cluster_combo_search" class="combo">Select cluster
							<!-- INPUT HIDDEN -->
				          <input id="cluster_input" type="hidden" value=""/>
							<ul class="elements">
								<li class="first"></li>
								   <% Cluster.all.each do |cluster| %>
									<li>
										<a id="<%= cluster.id%>"><%= cluster.name %></a>
									</li>		
								   <% end %>
								<li class="last"></li>
							</ul>
					</span>
				</li>
				<li>
					<label>SECTOR</label>
					<span id="sector_combo_search" class="combo">Select sector
							<!-- INPUT HIDDEN -->
				          <input id="sector_input" type="hidden" value=""/>
							<ul class="elements">
								<li class="first"></li>
								   <% Sector.all.each do |sector| %>
									<li>
										<a id="<%= sector.id%>"><%= sector.name %></a>
									</li>		
								   <% end %>
								<li class="last"></li>
							</ul>
					</span>					
				</li>
			</ul>		
	      </form>
		</div>
		<span class="bottom"></span>
    </div>
    <div class="one_project">
    <span class="top"></span>
    <div class="content">
        <p><%= Project.count %></p>  
		<!-- NOTE: Pluralize do the following condition but we don't want duplicate Project.count information -->
        <label><%= ((Project.count > 1)&&(Project.count != 0))? 'projects':'project' %><br/>registered</label>   
        <a class="add_project" href="<%= new_admin_project_path %>">Add new project</a>
        <a class="import_csv" href="#">Import a .csv file</a>
    </div>
    <span class="bottom"></span>
    </div>
  </div>

  <div class="block">
    <div class="top"></div>
    <div class="med projects_list">
      <h2>
        <%= pluralize(@projects.total_entries, 'project', 'projects') %>
        <% if params[:q]%>
          on <a class="remove" href="#">Food</a> & <a class="remove" href="#">Health</a>
        <% end %>
      </h2>
      <ul>
        <% @projects.each do |project| %>
        <li>
          <div class="project_name">
            <h3><a href="<%= edit_admin_project_path(project) %>"><%= project.name %></a></h3>
            <a class="project_status <%= project.finished? ? 'closed' : 'active' %>"><%= project.finished? ? 'Closed' : 'Active' %></a>
          </div>
          <div class="gray box single">
            <p class="red"><a href="<%= edit_admin_organization_path(project.primary_organization) %>"><%= project.primary_organization.name %></a></p>
          </div>
          <% unless project.clusters.empty? %>
            <% if project.clusters.count == 1 %>
            <div class="white box single little">
              <p><%= project.clusters.first.name %></p>
            </div>
            <% else %>
            <div class="white box little">
              <p><%= project.clusters.first.name %></p>
              <p class="secondary"><%= "and #{project.clusters.count - 1} more" %></p>
            </div>
            <% end %>
          <% else %>
            <div class="white box little">
            </div>
          <% end %>
          <div class="gray box single little">
            <p><%= project.countries.first.try(:name) %></p>
          </div>
        </li>
        <% end -%>
      </ul>
    </div>
    <% if @projects.total_pages > 2 %>
    <div class="bottom_grey paginate">
      <%= will_paginate(@projects) %>
    </div>
    <% end %>
  </div>

  <div class="add_new">
    <a href="<%= new_admin_project_path %>">
      Create new project<br/>
      <strong>You already have <%= pluralize(Project.count, 'project', 'projects') %> created</strong>
    </a>
  </div>
</div>
<script src="/javascripts/backoffice/application.js" type="text/javascript" charset="utf-8"></script>