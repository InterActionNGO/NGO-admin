      <span id="date_updated" class="combo_date">09/10/2010
		<div class="select_dates end_date">
			<span class="month">
				<p class="title">MONTH</p>
				<a class="month_combo">SEPTEMBER</a>
			</span>
			<span class="day">
				<p class="title">DAY</p>
				<a class="day_combo">10</a>
			</span>
			<span class="year">
