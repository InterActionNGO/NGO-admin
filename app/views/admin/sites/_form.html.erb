<%= form_for(@site, :url => (@site.new_record? ? admin_sites_path : admin_site_path(@site))) do |f| %>

  <div class="field">
    <label>SITE NAME <strong>*</strong></label>
    <span class="input_large <%= 'error' if !@site.errors[:name].empty? && action_name != 'new' %>">
      <%= f.text_field :name, :class=>"long #{'error' if !@site.errors[:name].empty? && action_name != 'new'}" %>
      <%= errors_for @site, :name %>
    </span>
  </div>
  <div class="field">
    <span class="chars">
      <label>SHORT DESCRIPTION <strong>*</strong></label>
      <p id="chars_left">330 chars left</p>
    </span>

    <span class="textarea_short <%= 'error' if !@site.errors[:short_description].empty? && action_name != 'new' %>">
      <%= f.text_area :short_description , :onkeyup=>"limitChars('site_short_description', 330, 'chars_left')" %>
    </span>
  </div>
  <div class="field">
    <span class="chars">
      <label>LONG DESCRIPTION <strong>*</strong></label>
      <p id="chars_left_long">730 chars left</p>
    </span>
    <span class="textarea <%= 'error' if !@site.errors[:long_description].empty? && action_name != 'new' %>">
      <%= f.text_area :long_description , :onkeyup=>"limitChars('site_long_description', 730, 'chars_left_long')" %>
    </span>
  </div>
  <h3 class="section museo_sans">GEOGRAPHIC CONTEXT</h3>

  <div class="field">
  <label>SITE GEOGRAPHICAL CONTEXT</label>
  <ul class="geographic_options">
  <li id="gc_worldwide" class="selected"><a class="combo limited">Worldwide, not limited</a></li>
  <li id="gc_limited_country">
    <a class="combo limited">Limited to a country</a>
    <div class="content">
      <span class="select_country_combo"><p class="country">Select a country</p>
      <%= f.hidden_field :geographic_context_country_id %>
        <div class="values country">
          <ul>
            <% Country.all.each do |country| %>
              <li><a class="country_value" id="<%= country.id %>"><%= country.name %></a></li>
            <%end -%>
          </ul>
        </div>
      </span>
    </div>
  </li>
  <li id="gc_limited_region">
    <a class="limited combo">Limited to a region</a>

    <div class="content">
      <span class="select_country_combo"><p class="country">Select a country</p>
        <%= f.hidden_field :geographic_context_country_id %>
        <div class="values country">
          <ul>
            <% Country.all.each do |country| %>
              <li class="country_region_value"><a class="country_value" id="<%= country.id %>"><%= country.name %></a></li>
            <% end -%>
          </ul>
        </div>
      </span>
      <div id="regions">
      </div>
    </div>
  </li>
  <li id="gc_limited_bbox">
    <a class="limited combo">Limited by a boundary box</a>
    <div class="content">
      <div id="map_bbox">
        <!-- TODO: ADD MAP  -->
      </div>
    </div>
  </li>
  </ul>
  </div>  <!-- field -->
  <h3 class="section museo_sans">PROJECT FILTERING</h3>

  <div class="field">
  <label>PROJECT TYPOLOGY</label>

  <ul class="project_tipo_options">
    <li id="include_sector_cluster">
      <a class="check">Include only projects from a particular cluster or sector</a>
      <div class="content">
        <span class="select_combo_typology"><p class="cluster_sector">Select a cluster or a sector</p>
          <div class="values">
            <%= f.hidden_field :project_context_cluster_id  %>
            <ul class="clusters_or_sectors">
              <li class="section"><p>CLUSTERS</p></li>
                  <% Cluster.all.collect.each do |cluster| %>
                <li><a class="cluster_value" id="<%= cluster.id %>"><%= cluster.name %></a></li>
              <%end -%>

              <%= f.hidden_field :project_context_sector_id  %>
              <li class="section"><p>SECTORS</p></li>
                  <% Sector.all.collect.each do |sector| %>
                <li><a class="sector_value" id="<%= sector.id %>"><%= sector.name %></a></li>
              <%end -%>
            </ul>
          </div>
        </span>
      </div>
    </li>
    <li id="include_ngo">
      <a class="check">Include only projects from a particular NGO</a>
      <div class="content">
        <span class="select_combo_typology"><p class="ngo">Select an NGO</p>
          <div class="values">
            <ul class="organizations">
              <%= f.hidden_field :project_context_organization_id  %>
              <% Organization.all.collect.each do |organization| %>
                <li><a class="organization" id="<%= organization.id %>"><%= organization.name %></a></li>
              <%end -%>
            </ul>
          </div>
        </span>
      </div>
    </li>
    <li id="include_tags">
      <a class="check">Include only matching some tags</a>
      <div class="content">
        <span class="tags_site">
          <%= f.text_field :project_context_tags, {:id => 'pc_tags_section'} %>

        </span>
      </div>
    </li>
  </ul>
  </div> <!-- field -->
  <h3 class="section museo_sans">CONTACT INFORMATION</h3>

    <div class="two_columns">
      <div class="left_column">
        <div class="field">
          <label>CONTACT EMAIL</label>
          <span class="input_short">
            <%= f.text_field :contact_email %>
          </span>
        </div> <!-- field -->
      </div>
      <div class="right_column">
        <div class="field">
          <p class="title">CONTACT PERSON / ORGANIZATION</p>
          <span class="input_short">
            <%= f.text_field :contact_person %>
          </span>
        </div> <!-- field -->
      </div>
    </div>

  <h3 class="section museo_sans">TECHNICAL CONFIGURATION</h3>

  <div class="field">
    <label>SITE URL</label>
    <span class="input_url">
      <%= f.text_field :url, :class=>"long #{'error' if !@site.errors[:url].empty? && action_name != 'new'}" %>
      <%= errors_for @site, :url %>
    </span>
  </div>
  <div class="field">
    <label>GOOGLE ANALYTICS ID</label>
    <span class="input_short">
          <%= f.text_field :google_analytics_id %>
      </span>
   </div>
   
   <!--  TO GET CORRECT URL -->

   <script>
      var admin_tags_path = '<%= admin_tags_path %>';  
    </script>
       

   
  <%= f.submit 'Save changes', :class => "#{'error' if @site.invalid? && action_name != 'new'}" %>



