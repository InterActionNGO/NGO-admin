<%= semantic_form_for @geolocation, :url => (@geolocation.new_record? ? admin_geolocations_path : admin_geolocation_path(@geolocation)), :html => { :multipart => true } do |f| %>

    <% if flash[:error] %>
        <div class="form_error">
            <% flash[:error].each do |e| %>
                <%= e %><br>
            <% end %>
        </div>
    <% end %>
    
    <%= f.inputs do %>
    
        <%= f.input :name %>
        <%= f.input :uid, :wrapper_html => {:class=>"col-2"}%>
        <%= f.input :adm_level, :wrapper_html => { :class=>"col-2" } %>
        <%= f.input :country_name %>
        <%= f.input :country_code, :wrapper_html => { :class=>"col-2" }%>
        <%= f.input :country_uid, :wrapper_html => { :class=>"col-2" } %>
        <%= f.input :latitude, :as => :string, :wrapper_html => {:class => 'col-2'} %>
        <%= f.input :longitude, :as => :string, :wrapper_html => {:class => 'col-2'} %>
        <%= f.input :g0, :wrapper_html => {:class => 'col-2'} %>
        <%= f.input :g1, :wrapper_html => {:class => 'col-2'} %>
        <%= f.input :g2, :wrapper_html => {:class => 'col-2'} %>
        <%= f.input :g3, :wrapper_html => {:class => 'col-2'} %>
        <%= f.input :g4, :wrapper_html => {:class => 'col-2'} %>
        <%= f.input :provider %>
        <%= f.input :custom_geo_source %>
        <%= f.input :fclass, :wrapper_html => {:class => 'col-3'} %>
        <%= f.input :fcode, :wrapper_html => {:class => 'col-3'} %>
        <%= f.input :cc2, :wrapper_html => {:class => 'col-3'} %>
        <%= f.input :admin1, :wrapper_html => {:class => 'col-2'} %>
        <%= f.input :admin2, :wrapper_html => {:class => 'col-2'} %>
        <%= f.input :admin3, :wrapper_html => {:class => 'col-2'} %>
        <%= f.input :admin4, :wrapper_html => {:class => 'col-2'} %>
        
    <% end %>
    
    <% if !@geolocation.new_record? %>
        
        <span class="faux-label">Created</span>
        <p><%= @geolocation.created_at %></p>
        
        <span class="faux-label">Last updated</span>
        <p><%= @geolocation.updated_at %></p>
        
        <span class="faux-label">Full path</span>
        <p><%= @geolocation.readable_path %></p>
        
    <% end %>
    
    <%= f.actions do %>
        <%= f.action :submit, :label => '' %>
        <%= f.action :cancel, :label => 'Cancel', :url => admin_geolocations_path %>
    <% end %>
    
<% end %>

