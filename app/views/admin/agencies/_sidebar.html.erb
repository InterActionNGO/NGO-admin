<ul>
  <li <%= selected_if_current_page(edit_admin_agency_path(@agency), !params[:site_id].nil?) %>>
    <div class="bottom_selected">
      <%= link_to('Basic information', edit_admin_agency_path(@agency), :class=>"basic") %>
    </div>
  </li>
  <li <%= selected_if_current_page(projects_admin_agency_path(@agency)) %>>
    <%= link_to('Funded projects', projects_admin_agency_path(@agency)) %><% if !@agency.all_donated_projects.empty? %> <p><span><%=@agency.all_donated_projects.count%></span></p><% end %>
  </li>
</ul>

<div class="delete">
  <h5>DELETE THIS AGENCY</h5>
  <p>Clicking the link below will permanently delete this agency and its references within the sites</p>
  <%= link_to("Delete this agency", '#', :destroy_url=>admin_agency_path(@agency), :att_name=>"agency") %>
</div>


