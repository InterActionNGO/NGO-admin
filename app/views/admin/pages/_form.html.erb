<%= form_for([:admin, @site, @page || @site.pages.new]) do |f| %>

  <%= f.error_messages %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>

  <div class="field">
    <%= f.label :permalink %>
    <%= f.text_field :permalink %>
  </div>

  <div class="field">
    <%= f.label :highlighted %>
    <%= f.check_box :highlighted %>
  </div>

  <div class="field">
    <%= f.submit 'Save' %>
  </div>

<% end -%>