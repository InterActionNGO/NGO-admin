<h2>Pages from <%= @site.name %></h2>

<div class="main">
  <p><%= link_to('+ new page', new_admin_site_page_path(@site)) %></p>

  <ul>
    <% @pages.each do |page| %>
      <li><%= link_to(page.title, edit_admin_site_page_path(@site, page)) %> - <%= link_to("Delete", admin_site_page_path(@site, page), :method => :delete, :confirm => '¿Are you sure?') %></li>
    <% end -%>
  </ul>

  <%= will_paginate(@pages) %>

  <p><%= link_to("⟵ back to #{@site.name}", edit_admin_site_path(@site)) %></p>
</div>
