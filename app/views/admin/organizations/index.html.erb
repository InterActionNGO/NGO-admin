    
    <div class="main_layout">
      <div class="block">
        <div class="two_donors">
          <form>
            <label>SEARCH BY TEXT</label>
            <input type="text" value="Search NGOs by name, place,..." />
            <input type="submit" value="" />
          </form>
        </div>
        <div class="one_donor">
          <p>2,930</p>
          <label>donors<br/>registered</label>
          <a href="/admin/organizations/new">Add new NGO</a>
        </div>
      </div>
  
      <div class="block">
        <div class="top"></div>
        <div class="med ngos_list">
          <h2><%= @organizations.count %> NGOs implementing projects on <a class="remove" href="#">Ecuador</a></h2>
          <ul>
            <% @organizations.each do |organization| %>
              <li>
                <h3><%= link_to(organization.name, edit_admin_organization_path(organization)) %></h3>
                <p class="red"><a href="#">6 projects</a></p>
                <p>contact@oxfam.org</p>
              </li>
            <% end -%>
          </ul>
        </div>
        <div class="bottom_grey paginate">
          <!-- <%= will_paginate(@organizations) %> -->
          <ul>
            <li class="selected"><a href="#">1</a></li>
            <li><a href="#">2</a></li>
            <li><a href="#">3</a></li>
            <li><a href="#">4</a></li>
            <li class="last"><a href="#">NEXT</a></li>
          </ul>
        </div>
      </div>
  
      <div class="add_new">
        <a href="/admin/organizations/new">
          Add a new NGO<br/>
          <strong>There are already 2,930 NGOs registered</strong>
        </a>
      </div>
    </div>