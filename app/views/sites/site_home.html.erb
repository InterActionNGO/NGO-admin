<div class="main_head">
  <div class="inner_main_head">
    <div class="left">
      <div class="float_head home">
        <h1><%= @site.name %></h1>
        <% unless @site.short_description.nil? %><h3><%= @site.short_description %></h3><%end%>
      </div>
    </div>
    <div class="right home">
      <% unless @site.short_description.nil? %><p><%= @site.long_description %> <a href="<%= page_path(Page.about(@site)) %>">Learn more</a></p>

      <%end%>
    </div>
  </div>
</div>

<!-- div id="header" -->
<%= render :partial => 'shared/menu'  %>

  <div id="map" class="home"></div>

  <div id="layout">
    <div id="left_column">

      <!-- LEFT PART -->
      <div class="left"></div> <!-- H"J"ACK -->
      <div class="outer_float">
        <div class="float_left">
          <div class="block box_info">
            <div class="projects_account">
              <label>PROJECTS</label>
              <h2><%= @site.projects.size %></h2>
            </div>
            <div class="orgs_account">
              <label>ORGANIZATIONS</label>
              <h2><%= @site.organizations.size %></h2>
            </div>
          </div>

          <div class="block statistics">
            <h3>PROJECTS BY CLUSTER</h3>
            <ul class="statistics_list">
                <!-- TODO: We need projects_clusters by site         -->
                <li>
                  <div id="tooltip">
                    <span class="body_tooltip">
                      <label>Camp Coordination and Management</label>
                    </span>
                    <span class="bottom_tooltip"></span>
                  </div>
                  <a class="plus"><span class="aller" style="width:20px">20</span></a>
                </li>
                <li>
                  <div id="tooltip">
                    <span class="body_tooltip">
                      <label>Camp Coordination and Management</label>
                    </span>
                    <span class="bottom_tooltip"></span>
                  </div>
                  <a class="plus"><span class="aller" style="width:20px">20</span></a>
                </li>
                <li>
                  <div id="tooltip">
                    <span class="body_tooltip">
                      <label>Camp Coordination and Management</label>
                    </span>
                    <span class="bottom_tooltip"></span>
                  </div>

                  <a class="plus"><span class="aller" style="width:20px">20</span></a>
                </li>
            </ul>

          </div>

          <div class="block margin">
            <h3>MOST ACTIVE ORGANIZATIONS</h3>
            <ul>
              <li><a href="#">USAid</a> - 12 projects</li>
              <li><a href="#">Compassion Fund</a> - 12 projects</li>
              <li><a href="#">Oxfam America</a> - 12 projects</li>
              <li><a href="#">Food For Haiti</a> - 12 projects</li>
            </ul>
          </div>

          <% if false %>
          <% unless @country.donors(@site).empty? %>
          <div class="block">
            <h3>DONORS</h3>
              <ul>
                <% @country.donors(@site)[0...10].each do |donor| %>
                <li><%= link_to(donor.name, donor_path(donor)) %></li>
                <% end %>
              </ul>
              <% if @country.donors(@site).size > 10 %>
                <p>and <%= pluralize(@country.donors(@site).size - 10, 'more donor', 'more donors') %></p>
              <% end %>
          </div>
          <% end %>

          <%end%>
        </div>
        <!-- div.float_left -->
      </div>
      <!-- <div class="outer_float"> -->

      <!-- RIGHT PART -->

      <div class="right">
        <h3>LIST OF PROJECTS</h3>
        <div id="projects">
          <%= render 'projects/projects' %>
        </div>
        <div class="view_more">
          <a id="view_more">More projects</a>
        </div>
      </div>
    </div>

    <script type="text/javascript">
      var map_data = <%=raw(@map_features_json)%>;
    </script>

    <script src="/javascripts/sites/mercatorProjection.js" type="text/javascript" charset="utf-8"></script>
    <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=true"></script>
    <script src="/javascripts/sites/IOMMarker.js" type="text/javascript" charset="utf-8"></script>
    <script src="/javascripts/sites/home.js" type="text/javascript" charset="utf-8"></script>
