<div class="sidebar">
  <p>Country</p>
  <h2><%= @country.name %></h2>

  <div class="map"></div>

  TODO: wikipedia

  <!-- CLUSTER -->
  <div class="body_info grid">
    <div class="real_content">
      <div class="content_info">
        <p class="title_section pt_sans_bold"><%= @country.name.upcase %> PROJECTS BY <%= @site.word_for_clusters.upcase %></p>
        <ul class="statistics_list">
          <% @country.projects_clusters(@site)[0...3].each do |cluster,count| %>
          <li>
            <a class="<%= cluster_class(cluster) %>"><span class="aller" style="width:<%= cluster_width(count) %>px"><p><%= count %></p></span></a>
          </li>
          <% end %>
        </ul>
        <% if @country.projects_clusters(@site).size > 3 %>
          <p class="summarize_info"><%= pluralize(@country.projects_clusters(@site).size - 3, 'project', 'projects') %> more on other clusters</p>
        <% end %>
      </div>
    </div>
  </div>

  <h3>Donors</h3>
  <% unless @country.donors(@site).empty? %>
    <ul>
      <% @country.donors(@site)[0...10].each do |donor| %>
      <li><%= link_to(donor.name, donor_path(donor)) %></li>
      <% end %>
    </ul>
    <% if @country.donors(@site).size > 10 %>
    <p>and <%= pluralize(@country.donors.size - 10, 'more donor', 'more donors') %></p>
    <% end %>
  <% end %>

  <h3>REGIONS ON THE COUNTRY</h3>
  <% unless @country.regions_projects(@site).empty? %>
  <ul>
    <% @country.regions_projects(@site).each do |region, count| %>
    <li><%= link_to(region.name, region_path(region)) %> - <%= count %></li>
    <% end %>
  </ul>
  <% end %>

  <h3>NEAR COUNTRIES</h3>
  TODO: guardar lat/lon countries y buscar pr√≥ximos

</div>

<div id="right_info_projects">
  <h3 class="pt_sans_bold shadow_white"><%= pluralize(@country.projects.site(@site).size, 'PROJECT', 'PROJECTS') %> AT <%= @country.name.upcase %></h3>
  <div id="projects">
    <%= render :partial => 'projects/projects' %>
  </div>
</div>