  <div id="layout">
    <div id="left_column">
    
      <!-- LEFT PART -->
      <div class="left"></div> <!-- H"J"ACK -->
      <div class="outer_float">
        <div class="float_left">
          <div class="head">
            <h2>FACTSHEET</h2>
          </div>

          <% unless @organization.donations.nil? || @organization.donations.sum(:amount).eql?(0.0) %>
          <div class="block">
            <h3>BUDGET FOR FOOD SECURITY</h3>
            <p class="budget"><%= number_with_delimiter(@organization.donations.sum(:amount)) %></p>
            <% donors_total = @organization.donors_count %>
            <p><%= link_to(pluralize(donors_total, 'donor to this organization', 'donors to this organization'),'#') %> </p>
          </div>
          <%end%>
          
          <% unless @site.nil? || @organization.projects_clusters(@site).empty? %>
          <div class="block statistics">
            <h3>PROJECTS BY CLUSTER</h3>
            <ul class="statistics_list">
              <% @organization.projects_clusters(@site)[0...3].each do |cluster,count| %>
                <li><a class="<%= cluster_class(cluster) %>"><span class="aller" style="width:<%= cluster_width(count) %>px"><%= count %></span></a></li>
              <% end %>
            </ul>
            <% if @organization.projects_clusters(@site).size > 3 %>
              <% total =  @organization.projects_clusters(@site).size - 3 %>
              <!-- <%= link_to(pluralize(total, 'project more on other clusters', 'projects more on other clusters') ,'#') %> -->
            <% end %>
          </div>
          <%end%>
          <%unless @organization.projects_regions(@site).empty? %>
          <div class="block statistics">
            <h3>PROJECTS BY LOCATION</h3>
              <ul class="chart">
                <% index = 0 %>
                <% values = '' %>
                <% others = 0%>
                <% max_value = 0 %>
                <% @organization.projects_regions(@site).each do |region, count| %>
                  <% if index < 3 %>
                    <li class="pos<%= index %>"><a href="#"><%= truncate(region.name,:length=>15, :omission=>"...") %></a> - <%= count %></li>
                    <% values += ((index==0) ? '' : ',') + count.to_s() %>
                    <% max_value<count ? max_value=count : nil %>
                  <% else %>
                    <% others = others + 1%>
                    <% max_value<others ? max_value=others : nil %>
                  <% end %>
                  <% index = index + 1 %>
                <% end %>

                <% if @organization.projects_regions(@site).size>3 %>
                  <li class="pos3">Others - <%= others %></li>
                <% end %>
              </ul>
              <img class="pie_chart" src="http://chart.apis.google.com/chart?cht=p&chs=120x120&chd=t:<%= values %><% if others>0 %>,<%= others %><% end %>&chds=0,<%= max_value %>&chco=333333|565656|727272|ADADAD|EFEFEF|FFFFFF&chf=bg,s,FFFFFF00" />
          </div>
          <%end%>
          <% unless @organization.resources(@site).empty? %>
            <div class="block resources">
              <h3>ADDITIONAL RESOURCES</h3>
              
              <% @organization.resources(@site).each do |resource| %>
                <ul>
                  <li><a href="<%= resource.url %>" target="_blank"><%= resource.title %></a></li>
                </ul>
              <%end%>
            </div>
          <%end%>
          <%unless @organization.contact_name.nil? &&  @organization.contact_position.nil? && @organization.hq_address.nil? && @organization.contact_zip.nil? && @organization.contact_phone_number.nil? %>
          <div class="block">
            <h3>CONTACT INFORMATION</h3>
            <p><strong><%= @organization.contact_name %></strong><br/><%= @organization.contact_position %><br/><%= @organization.hq_address %> <%= @organization.contact_zip %></p>
            <p><%= @organization.contact_phone_number %><br/><% unless (@organization.contact_email.nil?)||(@organization.contact_email.empty?) %><%= link_to(@organization.contact_email, "mailto:#{@organization.contact_email}") %><%end%></p>
          </div>
          <%end%>
          <% unless @organization.donation_phone_number.nil? && @organization.donation_website.nil? %>
          <div class="block green">
            <h3>DONATION INFORMATION</h3>
            <p><strong>Donations</strong><br/><%= @organization.donation_address %></p>
            <p><%= @organization.donation_phone_number %><br/><%= link_to(@organization.donation_website, @organization.donation_website) %></p>
          </div>
          <%end%>
          <% unless @organization.twitter.nil? &&  @organization.facebook.nil? && @organization.website.nil? %>
          <div class="block">
             <h3>OFFICIAL SITE</h3>
            <% if @organization.twitter? || @organization.facebook? %>
            <p class="social">
              <% if @organization.twitter? %>
                <%= link_to("follow us", "http://twitter.com/#{@organization.twitter}", :class=>"twitter", :target=>"_blank") %>
              <% end %>
              <% if @organization.twitter? &&  @organization.facebook? %> / <% end %>
              <% if @organization.facebook? %>
                <%= link_to("visit our page", "http://facebook.com/#{@organization.facebook}", :class=>"facebook", :target=>"_blank") %>
                <% end %>
            </p>
            <% end %>
            <% if @organization.website? %>
              <p class="website"><%= link_to(@organization.website, @organization.website, :rel => 'nofollow', :target => '_blank') %></p>
            <% end %>
          </div>
          <%end%>
        </div>
      </div>

      <!-- RIGHT PART -->
      <div class="right">
        <h3><%= pluralize(@organization.projects.site(@site).size, 'PROJECT', 'PROJECTS') %> AT <%= @organization.name.upcase %></h3>
        <div id="projects">
          <%= render :partial => 'projects/projects' %>
        </div>
      </div>
    </div>

