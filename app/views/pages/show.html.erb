  <div id="layout">
    <div id="pages">
      <div id="relative_content" class="left"></div>
      <div class="float_left">
        <div class="outer_head">
          <div class="head">
            <h1><%= @page.title %></h1>
          </div>
        </div>
        <div class="body">
          <%= raw(@page.body) %>
        </div>
      </div>
      <div class="right">
        <div class="block">
            <h2><%= @page.title %></h2>
            <ul>
              <% top_parent = @page.top_parent %>
              <li><%= link_to(top_parent.title, page_path(top_parent)) %>
              <% pages      = top_parent.children %>
              <% if pages.any? %>
                <ul>
                  <% pages.each do |child| %>
                  <li><%= link_to(child.title, page_path(child)) %></li>
                  <% end %>
                </ul>
              <% end %>
            </ul>
        </div>
    </div>

    <script src="/javascripts/sites/pages.js" type="text/javascript" charset="utf-8"></script>
