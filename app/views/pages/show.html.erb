  <div id="layout">
    <div id="pages">
      <div id="relative_content" class="left"></div>
      <div class="float_left">
        <div class="outer_head">
          <div class="head">
            <h1><%= @page.title %> <%= @site.name %></h1>
          </div>
        </div>
        <div class="body">
          <%= raw(@page.body) %>
        </div>
      </div>
      <div class="right">
        <div class="block">
          <% if @page.children.any? %>
            <h2><%= @page.title %> IN THIS SITE</h2>
            <ul>
              <% @page.children.each do |page| %>
              <li><%= link_to(page.title, page_path(page)) %></li>
              <% end %>
            </ul>
          <% elsif @page.parent_id? %>
            <h2>Parent page</h2>
            <ul>
              <li><%= link_to(@page.parent.title, page_path(@page.parent)) %></li>
            </ul>
          <% end %>
        </div>
    </div>

    <script src="/javascripts/sites/pages.js" type="text/javascript" charset="utf-8"></script>
