  <div id="layout">
    <div id="pages">
      <div id="relative_content" class="left"></div>
      <div class="float_left">
        <div class="outer_head">
          <div class="head">
            <h1><%= @page.title %> <%= @site.name %></h1>
          </div>
        </div>
        <div class="body">
          <%= raw(@page.body) %>
        </div>
      </div>
      <div class="right">
        <div class="block">
            <h2><%= @page.title %> IN THIS SITE</h2>
            <ul>
              <% @site.pages.highlighted.each do |page| %>
                <li><%= link_to(page.title, page_path(page)) %>
                <% if page.children.any? %>
                  <ul>
                    <% page.children.each do |child| %>
                    <li><%= link_to(child.title, page_path(child)) %></li>
                    <% end %>
                  </ul>
                <% end %>
                </li>
              <% end %>
            </ul>
        </div>
    </div>
    
    <script src="/javascripts/sites/pages.js" type="text/javascript" charset="utf-8"></script>
