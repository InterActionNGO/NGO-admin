<div id="layout">
  <div id="pages">

  <div class="row">
    <div class="grid-4">
      <aside>
        <% if @pages.present? -%>
          <h2>About</h2>
          <ul>
            <% @pages.each do |child| %>
              <li class="page"><%= link_to_unless(child==@page,child.title, page_path(child)) %></li>
            <% end %>
          </ul>
        <% else -%>
          <% top_parent = @page.top_parent %>
          <h3><%= link_to(top_parent.title, page_path(top_parent)) %></h3>
          <% pages = top_parent.children.published %>
          <% if pages.any? %>
            <ul>
              <% pages.each do |child| %>
                <li class="page"><%= link_to_unless(child==@page,child.title, page_path(child)) %></li>
              <% end %>
            </ul>
          <% end %>
        <% end -%>
      </aside>
    </div>


    <div class="grid-12 offset-1">
      <section class="about" id="pages">
          <h2 class="section-title"><%= @page.title %></h2>
          <article class="mod-content-article">
            <%= raw @page.body  %>
          </article>
      </section>
    </div>

  </div>
</div>


