<div class="main_head">
  <div class="inner_main_head">
    <div class="left">
      <div class="float_head">
        <h2><%= @area_parent %></h2>
        <h1><%= @area.name %></h2>
      </div>
    </div>
    <div class="right">
      <%= content_tag :p, @area.wiki_description if @area.wiki_description %>
      <%= content_tag :p, raw("Description provided by Wikipedia #{content_tag(:a, 'Read full article', :href => @area.wiki_url)}"), :class => 'provided' if @area.wiki_url %>
      <span class="wikipedia"/>
    </div>
  </div>
</div>


<div id="map"></div>
<a href="#zoom_in" id="zoomIn" onclick="zoomIn()"></a>
<a href="#zoom_out" id="zoomOut" onclick="zoomOut()"></a>

<div id="layout">
  <div id="left_column">

    <!-- LEFT PART -->
    <div class="left"></div> <!-- H"J"ACK -->
    <div class="outer_float">
      <div class="float_left">
        <div class="head">
          <h2>FACTSHEET</h2>
        </div>

        <div id="secondary_map"><img src="http://chart.apis.google.com/chart?cht=map:fixed=0,-100,40,0&amp;chs=300x189&amp;chld=HT&amp;chco=676767|FF0000|0000BB&amp;chf=bg,s,c6eff7" alt="Secondary map"/></div>
        <div class="block statistics">
          <h3>PROJECTS BY CLUSTER</h3>
          <% if @area.projects_clusters(@site).size > 0 %>
            <ul class="statistics_list">
              <% @first_three.each do |cluster,count| %>
                <li><a class="<%= cluster.css_class %> icon_statistics"><span class="aller" style="width:<%= cluster_width(count, @first_three_max) %>px"><%= count %></span></a></li>

              <% end %>
            </ul>
            <% if @area.projects_clusters(@site).size > 3 %>
              <% total =  @area.projects_clusters(@site).size - 3 %>
              <%= link_to(pluralize(total, 'project more on other clusters', 'projects more on other clusters') ,'#') %>
            <% end %>
          <% else %>
            <p>The are no clusters</p>
          <% end %>
        </div>

        <% donors = @area.donors(@site, 11) %>
        <div class="block">
          <h3>DONORS</h3>
          <% unless donors.empty? %>
            <ul>
              <% donors[0...10].each do |donor| %>
              <li><%= link_to(donor.name, donor_path(donor)) %></li>
              <% end %>
            </ul>
            <% if donors.size > 10 %>
              <p>and <%= pluralize(@area.donors_count(@site) - 10, 'more donor', 'more donors') %></p>
            <% end %>
          <% else %>
            <p>The are no donors</p>
          <% end %>
        </div>

        <% unless @area.near(@site, 5).empty? %>
        <div class="block margin">
          <h3>PROJECTS IN OTHER REGIONS</h3>
          <ul>
            <% @area.near(@site, 5).each do |area| %>
            <li>
              <%= link_to(area.name, (area.is_a?(Region) ? region_path(area) : country_path(area))) %>
              - <%= pluralize(area.is_a?(Array) ? area.count : 1, 'project', 'projects') %></li>
            <% end %>
          </ul>
        </div>
        <% end %>
      </div>
      <!-- float_left -->
    </div>
    <!-- outer_float -->
    <!-- RIGHT PART -->
    <div class="right">
      <h3><%= pluralize(@area.projects.site(@site).size, 'PROJECT', 'PROJECTS') %> AT <%= @area.name.upcase %></h3>
      <div id="projects">
        <%= render :partial => 'projects/projects' %>
      </div>
    </div>
  </div>

  <script src="/javascripts/sites/location.js" type="text/javascript" charset="utf-8"></script>

